extends layout

block content
  .inner
    form.form(action="/register" method="POST")
      h2 Register
      label(for="name-field") Name
      input(id="name-field" type="text" name="name" required)
      label(for="email-field") Email
      input(id="email-field" type="email" name="email" required)
      label(for="password-field") Password
      input(id="password-field" name="password" type="password" required)
      label(for="password-confirm-field") Confirm Password
      input(id="password-confirm-field" name="password-confirm" type="password" required)
